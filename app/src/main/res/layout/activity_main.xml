<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.alfatihramadhan.miwok.MainActivity">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/number_activity"
        android:textColor="@android:color/black"
        android:textStyle="bold"
        android:text="Numbers"
        android:padding="30dp"
        android:background="?android:attr/selectableItemBackground"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/family_members_activity"
        android:textColor="@android:color/white"
        android:textStyle="bold"
        android:text="Family Members"
        android:padding="30dp"
        android:background="@color/categoryFamily"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Colors"
        android:id="@+id/colors_activity"
        android:textColor="@android:color/white"
        android:textStyle="bold"
        android:padding="30dp"
        android:background="@color/categoryColors"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@android:color/white"
        android:textStyle="bold"
        android:text="Phrases"
        android:id="@+id/phrases_activity"
        android:padding="30dp"
        android:background="@color/categoryPhrases"/>


</LinearLayout>
